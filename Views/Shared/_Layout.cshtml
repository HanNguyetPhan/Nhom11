@using OnlineToyStore.Models.Home;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Vương Quốc Đồ Chơi</title>
    @*@Styles.Render("~/Content/css")*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/MyMainLayout.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-6" >
                <div class="logo">
                    <h1><a href="../Home">Online <span>MyKingDom </span></a></h1>
                    @*<img src="~/Images/unnamed.jpg" alt="Trulli" style="display: inline-block; margin: 10px; float: left; height: 60px; width: auto; border-radius: 50%; ">*@
                    <img src="~/Images/logo-254x76.png" alt="Trulli" style="display: inline-block; margin: px; float: left; height: 60px; width: auto; ">

                </div>
            </div>

            <div class="col-md-6 col-sm-6 col-xs-6">
                @*<div class="account">
            <ul>
                <li>
                    <div class="hidden-xs">
                        <h4><a>Liên hệ</a></h4>
                        <p>090-468-5976</p>
                    </div>

                    <div class="visible-xs">
                        <p>090-468-5976</p>
                    </div>

                </li>
            </ul>
        </div>*@
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" style='font-size: 28px; color: #EE4E45' href="#"><i class='fa fa-shopping-cart'></i><b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            @if (Session["cart"] != null)
                            {
                                foreach (Item item in (List<Item>)Session["cart"])
                                {
                                    <li>
                                        <a href="@Url.Action("RemoveFromCart", "Home", new { productId=item.Product.ProductId})">@item.Product.ProductName (@item.Quantity) <i class="fa fa-times"></i></a>
                                    </li>
                                }
                            }
                            <li class="divider"></li>
                            <li><a href="@Url.Action("Checkout","Home")">Thủ tục thanh toán</a></li>
                        </ul>
                    </li>
                </ul>

            </div>
        </div>
        <div class="row">

            <div class="col-md-12">
                <div class="nav-menus">

                    <ul class="nav nav-pills">
                        <li class="active"><a style="border-radius:initial;" href="../Home">Trang chủ</a></li>
                        <li><a style="border-radius:initial;" href="#">Địa chỉ</a></li>
                        <li><a style="border-radius:initial;" href="#">Thông tin</a></li>
                    </ul>
                </div>
            </div>

        </div>
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col-md-12 copyright">

                    <div class="col-md-6 col-sm-6 copyright-left">
                        <p>&copy; @DateTime.Now.Year - Nhóm 11: Cửa hàng đồ chơi online</p>
                    </div>

                    <div class="col-md-6 col-sm-6 copyright-right">

                        <ul class="list-unstyled list-social">
                            <li><a href="https://www.facebook.com/mykingdomvn/" target="_blank"><i class="fa fa-facebook-square" style="color: darkblue;"></i></a></li>
                            <li><a href="https://www.instagram.com/mykingdom_vietnam/"><i class="fa fa-instagram" style="color: mediumpurple;"></i></a></li>
                            <li><a href="https://www.youtube.com/channel/UCGeeH3wqD2AWB3NsyBwVrbw"><i class="fa fa-youtube-play" style="color: red;"></i></a></li>

                        </ul>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
