@model OnlineToyStore.Models.CategoryDetail
@{
    ViewBag.Title = "Thêm danh mục mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Breadcrumbs-->

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="../Admin/Dashboard">Bảng điều khiển</a>
        </li>
        <li class="breadcrumb-item ">Danh mục</li>
        <li class="breadcrumb-item active">Thêm danh mục mới</li>

    </ol>
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Thêm danh mục mới
        </div>
        @*Nó là một biểu mẫu chứa trường CategoryId ẩn, hộp văn bản và hai nút.
        Hộp văn bản cần nhập tên danh mục, nút hủy quay lại trang trước và nút gửi gửi biểu mẫu.*@
    <div class="card-body">
        @using (Html.BeginForm("UpdateCategory", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.CategoryId)

            <div class="form-group">
                <label class="control-label">Tên danh mục</label>

                @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control", placeholder = "Nhập tên danh mục", required = "required", autofocus = "autofocus" })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
            <a onclick="window.history.back();" class="btn btn-danger">Hủy bỏ</a>
            <input type="submit" class="btn btn-primary" value="Lưu" />
        }
    </div>
    </div>
</div>